#if [ -f /etc/jailkit/jk_init.ini ] && [ "$USERHASSSHACCESS1" == "YES" ]; then
#  if [ $4 ]
#  then
#    if [ "$4" == "YES" ] || [ "$4" == "NO" ]; then
