    USERHASSSHACCESS1=$3
    USERHASSSHACCESS2=$3
  else
    getString NO  "User can login via SSH?: " USERHASSSHACCESS1 NO
  fi
else
  getString NO  "User can login via SSH?: " USERHASSSHACCESS1 NO
