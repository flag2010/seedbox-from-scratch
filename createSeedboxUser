  sudo chown $NEWUSER1: $HOMEDIR1/.bashrc
  sudo chown $NEWUSER1: $HOMEDIR1/.bash_logout
  sudo chown $NEWUSER1: $HOMEDIR1/.profile
fi

if [ "$CHROOTJAIL1" == "YES" ]; then
