cd /etc/seedbox-from-scratch
sudo apt-get --yes purge sabnzbdplus
sudo apt-get --yes install python-cheetah
sudo apt-get --yes install python-pyopenssl
sudo apt-get --yes install python-openssl
sudo tar xvfz SABnzbd-0.7.6-src.tar.gz
sudo rm -r sabnzbd
sudo mv SABnzbd-0.7.6 sabnzbd
